<Page loaded="loaded">
<StackLayout orientation="vertical" style.backgroundColor="lightgray">
<Label text="{{ name }}" width="*" height="80" />
<Label text="{{'ocena: ' +score}}" width="*" height="80" />
 
  <Image src="~/images/Rondo.png" cssClass="image" horizontAlignment="center"/>
  <Repeater items="{{ comments }}">
    <Repeater.itemTemplate> 
      <Label text="{{$value}}" width="*"   textWrap="true"/>
    </Repeater.itemTemplate>
  </Repeater>
</StackLayout>

</Page>
